@{
}
@model LineIN.BFO.Web.Models.ParticipanteVM

<h3 class="alert alert-primary">Informações do Participante</h3>

<div class="row">
    <div class="col-sm-3 col-12">
        <div class="form-group">
            <label for="">CNPJ/CPF *</label>
            <input asp-for="@Model.CNPJouCPF" type="text" class="form-control" id="CnpjCpf" placeholder="Informe o CNPJ ou CPF">
        </div>
    </div>
    <div class="col-sm-6 col-12">
        <div class="form-group">
            <label for="">Nome *</label>
            <input asp-for="@Model.Nome" type="text" class="form-control" id="Nome" placeholder="Informe o Nome do participante">
        </div>
    </div>
    <div class="col-sm-3 col-12 ">
        <div class="form-group">
            <label for="">Email</label>
            <input asp-for="@Model.Email" type="email" class="form-control" id="Email" placeholder="Informe um E-mail de contato">
        </div>
    </div>
</div>

<h6 class="alert alert-primary mt-3">Endereço</h6>

<div class="row">
    <div class="col-sm-8 col-10">
        <div class="form-group">
            <label for="">Logradouro *</label>
            <input asp-for="@Model.Endereco.Logradouro" type="text" class="form-control" id="Logradouro" placeholder="">
        </div>
    </div>
    <div class="col-sm-4 col-2">
        <div class="form-group">
            <label for="">Num *</label>
            <input asp-for="@Model.Endereco.Numero" type="text" class="form-control" id="Numero" placeholder="s/n">
        </div>
    </div>
</div>

<div class="row">
    <div class="col-sm-6 col-12">
        <div class="form-group">
            <label for="">Bairro *</label>
            <input asp-for="@Model.Endereco.Bairro" type="text" class="form-control" id="Bairro" placeholder="">
        </div>
    </div>
    <div class="col-sm-6 col-12">
        <div class="form-group">
            <label for="">Complemento</label>
            <input asp-for="@Model.Endereco.Complemento" type="text" class="form-control" id="Complemento" placeholder="">
        </div>
    </div>
</div>

<div class="row">
    <div class="col-sm-6 col-12">
        <div class="form-group">
            <label for="">Cidade *</label>
            <input asp-for="@Model.Endereco.Municipio" type="text" class="form-control" id="Cidade" placeholder="">
        </div>
    </div>
    <div class="col-sm-3 col-6">
        <div class="form-group">
            <label for="">UF *</label>
            <input asp-for="@Model.Endereco.UF" type="text" class="form-control" id="UF" placeholder="">
        </div>
    </div>
    <div class="col-sm-3 col-6">
        <div class="form-group">
            <label for="">CEP *</label>
            <input asp-for="@Model.Endereco.CEP" type="text" class="form-control" id="CEP" placeholder="">
        </div>
    </div>
</div>
